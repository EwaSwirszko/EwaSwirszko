    d.end_fill()
    d.penup()
    d.home()
    d.pendown()

    wynik = [dice1(), dice2(), dice3(), dice4(), dice5(), dice6()]
    
def space():
    turtle.resetscreen()
    d.speed(10000)
    random.choice([dice1(), dice2(), dice3(), dice4(), dice5(), dice6()])
    
start_text()
turtle.onkey(space, "space")

turtle.listen()
turtle.mainloop()
