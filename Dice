import turtle
import random
d = turtle.Turtle()

#background
turtle.bgcolor("black")

#start text
def start_text():
    d.penup()
    d.goto(-200, 0)
    d.pendown()
    d.color("red")
    d.write("Press space to continue.", font=("Arial", 30))
    d.penup()
    d.home()
    d.pendown()

#dice
def dice():
    d.color("white")
    d.penup()
    d.forward(150)
    d.pendown()
    d.left(90)
    d.forward(150)
    d.begin_fill()
    for i in range (4):
        d.left(90)
        d.forward(300)
    d.end_fill()
    d.penup()
    d.home()
    d.pendown()

def dice1():
    dice()
    
    d.penup()
    d.goto(0, -10)
    d.pendown()
    d.color("black")
    d.begin_fill()
    d.circle(20)
    d.end_fill()
    d.penup()
    d.home()
    d.pendown()

def dice2():
    dice()

    d.penup()
    d.forward(80)
    d.right(90)
    d.forward(20)
    d.left(90)
    d.pendown()
    d.color("black")
    d.begin_fill()
    d.circle(20)
    d.end_fill()
    d.penup()
    d.home()
    d.pendown()

    d.penup()
    d.forward(-80)
    d.right(-90)
    d.forward(-20)
    d.left(-90)
    d.pendown()
    d.begin_fill()
    d.circle(20)
    d.end_fill()
    d.penup()
    d.home()
    d.pendown()

def dice3():
